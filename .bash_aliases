# system
alias sour="source ~/.bashrc"
alias ls="lsd"
alias ll="lsd -l"
alias la="lsd -al"
alias open="xdg-open"
alias shush="shutdown now"
alias pacmanu="sudo pacman -Syu"
alias pacmand="sudo pacman -Rs"

# apps
alias vim="nvim"
alias vi="vim"
alias tget="transmission-remote"
alias tgets="transmission-daemon"
alias ytm="yt-dlp -P ~/downloads/music/ -x"
alias copy="xclip -selection clipboard"
